
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. USER MODEL
// Handles both Teachers and Students.
// 'socketId' helps us manage real-time connections.
model User {
  id        Int      @id @default(autoincrement())
  name      String
  role      Role     @default(STUDENT) 
  socketId  String?  // vital for kicking users or private messaging
  createdAt DateTime @default(now())
  
  votes     Vote[]
}

// 2. POLL MODEL
// 'startedAt' is the key to Resilience. 
// If a student reloads, we calc: Time Remaining = Duration - (Now - StartedAt)
model Poll {
  id          Int       @id @default(autoincrement())
  question    String
  timer       Int       // Total duration in seconds (e.g., 60)
  status      PollStatus @default(PENDING)
  createdAt   DateTime  @default(now())
  startedAt   DateTime? 
  
  options     Option[]
  votes       Vote[]
}

// 3. OPTION MODEL
model Option {
  id        Int      @id @default(autoincrement())
  text      String
  isCorrect Boolean  @default(false)
  pollId    Int
  poll      Poll     @relation(fields: [pollId], references: [id])
  
  votes     Vote[]
}

// 4. VOTE MODEL
// The unique constraint ensures a student can never vote twice for the same poll.
model Vote {
  id        Int      @id @default(autoincrement())
  userId    Int
  pollId    Int
  optionId  Int
  
  user      User     @relation(fields: [userId], references: [id])
  poll      Poll     @relation(fields: [pollId], references: [id])
  option    Option   @relation(fields: [optionId], references: [id])

  @@unique([userId, pollId]) // CONSTRAINT: One vote per user per poll
}

enum Role {
  TEACHER
  STUDENT
}

enum PollStatus {
  PENDING
  ACTIVE
  ENDED
}