 generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

} 
// 1. USER MODEL
model User {
  id        Int      @id @default(autoincrement())
  name      String
  role      Role     @default(STUDENT)
  socketId  String?  
  roomId    String   // <--- ADDED: To separate classes
  createdAt DateTime @default(now())
   
  // ADDED: onDelete Cascade ensures votes disappear if user is kicked
  votes     Vote[]   
}
model Poll {
  id        Int        @id @default(autoincrement())
  question  String
  timer     Int
  status    PollStatus @default(PENDING)
  createdAt DateTime   @default(now())
  startedAt DateTime?

  roomId    String      // <<< ADD THIS

  options   Option[]
  votes     Vote[]
}

model Option {
  id        Int     @id @default(autoincrement())
  text      String
  isCorrect Boolean @default(false)
  pollId    Int
  poll      Poll    @relation(fields: [pollId], references: [id], onDelete: Cascade)
   
  votes     Vote[]
}

model Vote {
  id        Int      @id @default(autoincrement())
  userId    Int
  pollId    Int
  optionId  Int
   
  // ADDED: onDelete: Cascade here prevents crashes when kicking students
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  poll      Poll     @relation(fields: [pollId], references: [id], onDelete: Cascade)
  option    Option   @relation(fields: [optionId], references: [id])

  @@unique([userId, pollId]) 
}

enum Role {
  TEACHER
  STUDENT
}

enum PollStatus {
  PENDING
  ACTIVE
  ENDED
}